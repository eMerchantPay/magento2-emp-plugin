<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="emerchantpay_genesis_init" translate="label" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                <frontend_model>EMerchantPay\Genesis\Block\Adminhtml\System\Config\Fieldset\Init</frontend_model>
            </group>
            <group id="emerchantpay_genesis_direct" translate="label comment" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>eMerchantPay Direct</label>
                <fieldset_css>complex</fieldset_css>
                <comment>Accept payments through eMerchantPay's Payment Gateway - Genesis</comment>
                <include path="EMerchantPay_Genesis::system/method_direct.xml"/>
            </group>
            <group id="emerchantpay_genesis_checkout" translate="label comment" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>eMerchantPay Checkout</label>
                <fieldset_css>complex</fieldset_css>
                <comment>Accept payments through eMerchantPay's Payment Gateway - Genesis</comment>
                <include path="EMerchantPay_Genesis::system/method_checkout.xml"/>
            </group>
        </section>
    </system>
</config>
