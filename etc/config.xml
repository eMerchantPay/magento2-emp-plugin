<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Magento/Store/etc/config.xsd">
    <default>
        <payment>
            <emerchantpay_checkout>
                <active>0</active>
                <model>EMerchantPay\Genesis\Model\Method\Checkout</model>
                <order_status>payment_review</order_status>
                <title>emerchantpay Checkout</title>
                <test_mode>1</test_mode>
                <iframe_processing_enabled>0</iframe_processing_enabled>
                <transaction_types>sale</transaction_types>
                <allowspecific>0</allowspecific>
                <allow_specific_currency>0</allow_specific_currency>
                <group>emerchantpay</group>
                <threeds_allowed>1</threeds_allowed>
                <threeds_challenge_indicator>no_preference</threeds_challenge_indicator>
                <sca_exemption>low_risk</sca_exemption>
                <sca_exemption_amount>100</sca_exemption_amount>
            </emerchantpay_checkout>
        </payment>
    </default>
</config>
